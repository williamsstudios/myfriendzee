<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- title %></title>
    <link rel="stylesheet" href="/sass/bootstrap.min.css">
    <link rel="stylesheet" href="/sass/main.css">
    <link rel="icon" type="image/x-icon" href="/img/logos/favicon.ico">
    <script defer src="/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/81f3202402.js" crossorigin="anonymous"></script>
</head>
<body>
    <%- include('./inc/header.ejs') %>
    <div class="container" style="margin-top: 62px;">
        <div class="row">
            <div class="col-lg-12">
                <%- include('./inc/messages.ejs') %>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="bg-dark rounded-0">
                    <% if(user.coverPic) { %>
                        <div class="container" style="background: url('/uploads/<%- user.username %>/<%- user.coverPic %>') no-repeat; background-size:cover; background-position: center; min-height: 400px; max-height: 400px;">
                        </div>
                    <% } else { %>
                        <div class="container-fluid">
                            <div class="row">
                                <div class="col-lg-12 bg-dark" style="min-height:400px; max-height: 400px;"></div>
                            </div>
                        </div>
                    <% } %>
                </div>
                
            </div>
        </div>
        <div class="row" style="margin-top: -150px;">
            <div class="col-lg-2" style="margin-left: 30px;">
                <% if(user.avatar) { %>
                    <img src="/uploads/<%- user.username %>/<%- user.avatar %>" class="rounded-circle" alt="<%- user.username %>" width="200" height="200">
                <% } else { %>
                    <img src="/img/no_pic.jpg" alt="<%- user.username %>" class="rounded-circle" width="200" height="200">
                <% } %>
            </div>
            <div class="col-lg-9" style="margin-top: 95px; width: 81%;">
                <div class="row">
                    <div class="col-lg-10">
                        <h1 class="text-light" style="text-shadow: 2px 2px 2px #000;"><%- user.firstname %> <%- user.lastname %></h1>
                    </div>
                    <div class="col-lg-2">
                        <% if(logUser.username == user.username) { %>
                            <a href="#" class="btn btn-primary btn-md" data-bs-toggle="modal" data-bs-target="#editModal">Edit Profile</a>
                        <% } else if(logUser.username == user.followers) { %>
                            <form method="POST" action="/followers/unfollow/<%- user.username %>">
                                <button type="submit" class="btn btn-primary btn-md">Unfollow</button>
                            </form>
                        <% } else if(user.following == logUser.username) { %>
                            <form method="POST" action="/followers/follow/<%- user.username %>">
                                <button type="submit" class="btn btn-outline-primary btn-md">Follow Back</button>
                            </form>
                        <% } else { %>
                            <form method="POST" action="/followers/follow/<%- user.username %>">
                                <button type="submit" class="btn btn-outline-primary btn-md">Follow</button>
                            </form>
                        <% } %>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="navbar navbar-expand-lg" style="background: #000;">
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item" style="padding-left: 30px; padding-right: 30px; border-right: 1px #AAA solid;">
                                    <a href="/users/<%- user.username %>" class="nav-link">Home</a>
                                </li>
                                <li class="nav-item" style="padding-left: 30px; padding-right: 30px; border-right: 1px #AAA solid;">
                                    <a href="/photos/albums/<%- user.username %>" class="nav-link">Photos</a>
                                </li>

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4">
                <div class="card mt-4" id="proCard">
                    <div class="card-body">
                        <h5 class="card-title">About</h5>
                        <hr />
                        <ul class="list-group border-0">
                            <li class="list-group-item border-0" id="proItem">
                                <div class="row">
                                    <div class="col-lg-6">
                                        Birthday
                                    </div>
                                    <div class="col-lg-6"><%= user.birthday.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %> %></div>
                                </div>
                            </li>
                            <li class="list-group-item border-0" id="proItem">
                                <div class="row">
                                    <div class="col-lg-6">
                                        Gender
                                    </div>
                                    <div class="col-lg-6"><%- user.gender %></div>
                                </div>
                            </li>
                            <li class="list-group-item border-0" id="proItem">
                                <div class="row">
                                    <div class="col-lg-6">
                                        Location
                                    </div>
                                    <div class="col-lg-6">
                                        <% if(user.city && user.state) { %>
                                            <%- user.city %>, <%- user.state %>
                                        <% } else { %>
                                            <%- user.country %>
                                        <% } %>
                                    </div>
                                </div>
                            </li>
                            <li class="list-group-item border-0" id="proItem">
                                <div class="row">
                                    <div class="col-lg-6">
                                        Member Since
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="col-lg-6"><%= user.joindate.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %> %></div>
                                    </div>
                                </div>
                            </li>
                            <% if(user.bio) { %>
                                <li class="list-group-item border-0" id="proItem">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            About Me
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <p class="text-light"><%- user.bio %></p>
                                        </div>
                                    </div>
                                </li>
                            <% } %>
                        </ul>
                    </div>
                </div>

                <div class="card mt-4" id="proCard">
                    <div class="card-body">
                        <h5 class="card-title">Followers</h5>
                        <hr />
                        <% if(followers.length > 0) { %>
                            <% for(var f = 0; f<followers.length; f++) { %>
                                <a href="/users/<%- followers[f].followedBy %>">
                                    <% if(followers[f].followers.avatar) { %>
                                        <img src="/uploads/<%- followers[f].followedBy %>/<%- followers[f].followers.avatar %>" alt="<%- followers[f].followedBy %>" width="50" height="50" class="rounded-circle">
                                    <% } else { %>
                                        <img src="/img/no_pic.jpg" alt="<%- followers[f].followedBy %>" width="50" height="50" class="rounded-circle">
                                    <% } %>
                                </a>
                            <% } %>
                        <% } else { %>
                            <div class="col text-center">
                                <h6 class="card-title">Nobody Follows This User</h6>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card mt-4 border-1">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-12">
                                 <ul class="nav nav-underline nav-fill" id="myTab" role="tablist">
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link active" id="text-tab" data-bs-toggle="tab" data-bs-target="#text-tab-pane" type="button" role="tab" aria-controls="text-tab-pane" aria-selected="true"><i class="fa-solid fa-pen me-2"></i> Write A Post</button>
                                    </li>
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link" id="media-tab" data-bs-toggle="tab" data-bs-target="#media-tab-pane" type="button" role="tab" aria-controls="media-tab-pane" aria-selected="false"><i class="fa-solid fa-photo-film me-2"></i> Add A Photo/Video</button>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="tab-content" id="myTabContent">
                                    <div class="tab-pane fade show active" id="text-tab-pane" role="tabpanel" aria-labelledby="text-tab" tabindex="0">
                                        <form method="POST" action="/posts/new/<%- logUser.username %>">
                                            <div class="row mt-4 mb-3">
                                                <div class="col">
                                                    <textarea class="form-control" rows="5" cols="0" id="postText" name="postText" placeholder="Write something new..."></textarea>
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <div class="col">
                                                    <button type="submit" class="btn btn-primary btn-lg">Post</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="tab-pane fade" id="media-tab-pane" role="tabpanel" aria-labelledby="media-tab" tabindex="0">
                                        <form method="POST" action="/posts/new/media/<%- logUser.username %>" enctype="multipart/form-data">
                                            <div class="row mt-4 mb-3">
                                                <div class="col">
                                                    <textarea class="form-control" rows="5" cols="0" id="postText" name="postText" placeholder="Write something new..."></textarea>
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <div class="col">
                                                    <label for="nedia" class="form-label">Choose A Photo Or Video</label>
                                                    <input class="form-control form-control-sm" id="media" name="media" type="file">
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <div class="col">
                                                    <button type="submit" class="btn btn-primary btn-lg">Post</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% if(posts.length > 0) { %>
                    <% for(var s = 0; s<posts.length; s++) { %>
                        <div class="card mt-4 border-1">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-2">
                                        <a href="/users/<%- posts[s].author %>">
                                            <% if(posts[s].posts.avatar) { %>
                                                <img src="/uploads/<%- posts[s].author %>/<%- posts[s].posts.avatar %>" alt="<%- posts[s].author %>" width="60" height="60" class="rounded-circle"> 
                                            <% } else { %>
                                                <img src="/img/no_pic.jpg" alt="<%- posts[s].author %>" width="60" height="60" class="rounded-circle"> 
                                            <% } %>
                                        </a>
                                    </div>
                                    <div class="col-lg-10">
                                        <h5 class="card-title"><a href="/users/<%- posts[s].author %>"><%- posts[s].posts.firstname %> <%-posts[s].posts.lastname %></a></h5>
                                        <h6 class="text-light"><small><%= posts[s].post_date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %> %></small></h6>
                                    </div>
                                </div>
                                <div class="row pt-3 pb-3">
                                    <div class="col pt-3">
                                        <p class="text-light" style="font-size: 20px;"><%- posts[s].data %></p>
                                        <% if(posts[s].image) { %>
                                            <a href="/posts/view/<%- posts[s]._id %>">
                                                <img src="/uploads/<%- posts[s].author %>/<%- posts[s].image %>" alt="<%- posts[s].author %>" width="100%" height="600">
                                            </a>
                                        <% } %> 
                                        <% if(posts[s].video) { %>
                                            <video src="/uploads/<%- posts[s].author %>/<%- posts[s].video %>" width="100%" height="400" muted autoplay controls></video>
                                        <% } %>
                                    </div>
                                </div>
                                <div class="row pt-3 pb-3 border-top">
                                    <div class="col">
                                        <% if(posts[s].author == logUser.username) { %>
                                            <form method="POST" action="/posts/delete/<%- posts[s]._id %>">
                                                <button type="submit" class="btn btn-dark"><i class="fa-solid fa-trash me-2"></i> Delete</button>
                                                <a href="/posts/view/<%- posts[s]._id %>" class="btn btn-dark"><i class="fa-solid fa-comments me-2"></i> Comments</a>
                                            </form>
                                        <% } else if(logUser.username == posts[s].likes) { %>
                                            <form method="POST" action="/posts/unlike/<%- posts[s]._id %>">
                                                <button type="submit" class="btn btn-primary"><i class="fa-solid fa-heart me-2"></i> Unlike</button>
                                                <a href="/posts/view/<%- posts[s]._id %>" class="btn btn-dark"><i class="fa-solid fa-comments me-2"></i> Comments</a>
                                            </form>
                                        <% } else { %>
                                            <form method="POST" action="/posts/like/<%- posts[s]._id %>">
                                                <button type="submit" class="btn btn-dark"><i class="fa-regular fa-heart me-2"></i> Like</button>
                                                <a href="/posts/view/<%- posts[s]._id %>" class="btn btn-dark"><i class="fa-solid fa-comments me-2"></i> Comments</a>
                                            </form>
                                        <% } %>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% } %>
            </div>
        </div>
        <!-- Edit Modal -->
        <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-scrollable">
                <div class="modal-content bg-dark">
                    <div class="modal-header text-light">
                        <h1 class="modal-title fs-5" id="editModalLabel">Edit Profile Information</h1>
                        <button type="button" class="btn-close " data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="accordion" id="accordionExample">
                            <div class="accordion-item bg-dark text-light">
                                <h2 class="accordion-header">
                                    <button class="accordion-button bg-dark text-light" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                        Edit Profile Picture
                                    </button>
                                </h2>
                                <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
                                    <div class="accordion-body">
                                        <form method="POST" action="/users/edit/avatar" enctype="multipart/form-data">
                                            <div class="row mb-3">
                                                <div class="col">
                                                    <div>
                                                        <label for="avatar" class="form-label">Change Profile Picture</label>
                                                        <input class="form-control form-control-lg" id="avatar" name="avatar" type="file">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <div class="col">
                                                    <button type="submit" class="btn btn-primary btn-md">Save</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item bg-dark text-light">
                                <h2 class="accordion-header">
                                    <button class="accordion-button bg-dark text-light" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
                                        Edit Cover Picture
                                    </button>
                                </h2>
                                <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                                    <div class="accordion-body">
                                        <form method="POST" action="/users/edit/cover" enctype="multipart/form-data">
                                            <div class="row mb-3">
                                                <div class="col">
                                                    <div>
                                                        <label for="cover" class="form-label">Change Cover Picture</label>
                                                        <input class="form-control form-control-lg" id="cover" name="cover" type="file">
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <div class="col">
                                                    <button type="submit" class="btn btn-primary btn-md">Save</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item bg-dark text-light">
                                <h2 class="accordion-header">
                                    <button class="accordion-button bg-dark text-light" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="true" aria-controls="collapseThree">
                                        Edit Name
                                    </button>
                                </h2>
                                <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                                    <div class="accordion-body">
                                        <form method="POST" action="/users/edit/name">
                                            <div class="row mb-3">
                                                <div class="col">
                                                    <input tupe="text" class="form-control" id="firstname" name="firstname" value="<%- logUser.firstname %>">
                                                </div>
                                                <div class="col pl-0">
                                                    <input tupe="text" class="form-control" id="lastname" name="lastname" value="<%- logUser.lastname %>">
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <div class="col">
                                                    <button type="submit" class="btn btn-primary btn-md">Save</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item bg-dark text-light">
                                <h2 class="accordion-header">
                                    <button class="accordion-button bg-dark text-light" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="true" aria-controls="collapseFour">
                                        Edit Location
                                    </button>
                                </h2>
                                <div id="collapseFour" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                                    <div class="accordion-body">
                                        <form method="POST" action="/users/edit/location">
                                            <div class="row mb-3">
                                                <div class="col">
                                                    <% if(logUser.city) { %>
                                                        <input type="text" class="form-control" id="city" name="city" value="<%- logUser.city %>">
                                                    <% } else { %>
                                                        <input type="text" class="form-control" id="city" name="city" placeholder="City">
                                                    <% } %>
                                                </div>
                                                <div class="col pl-0">
                                                    <% if(logUser.state) { %>
                                                        <input type="text" class="form-control" id="state" name="state" value="<%- logUser.state %>">
                                                    <% } else { %>
                                                        <input type="text" class="form-control" id="state" name="state" placeholder="State">
                                                    <% } %>
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <div class="col">
                                                    <select class="form-control" id="country" name="country">
                                                        <option value="<%- logUser.country %>"><b>Current: <%- logUser.country %></b></option>
                                                        <%- include('./inc/country_list.ejs') %>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <div class="col">
                                                    <button type="submit" class="btn btn-primary btn-md">Save</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="accordion-item bg-dark text-light">
                                <h2 class="accordion-header">
                                    <button class="accordion-button bg-dark text-light" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFive" aria-expanded="true" aria-controls="collapseFive">
                                        Edit About Me
                                    </button>
                                </h2>
                                <div id="collapseFive" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                                    <div class="accordion-body">
                                        <form method="POST" action="/users/edit/bio">
                                            <div class="row mb-3">
                                                <div class="col">
                                                   <% if(logUser.bio) { %>
                                                        <textarea class="form-control" rows="5" cols="0" id="bio" name="bio"><%- logUser.bio %></textarea>
                                                    <% } else { %>
                                                        <textarea class="form-control" rows="5" cols="0" id="bio" name="bio" placeholder="Write Something About Yourself"></textarea>
                                                    <% } %>
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <div class="col">
                                                    <button type="submit" class="btn btn-primary btn-md">Save</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.min.js" integrity="sha384-G/EV+4j2dNv+tEPo3++6LCgdCROaejBqfUeNjuKAiuXbjrxilcCdDz6ZAVfHWe1Y" crossorigin="anonymous"></script>
</body>
</html>