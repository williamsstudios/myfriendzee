<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%- title %></title>
    <link rel="stylesheet" href="/sass/bootstrap.min.css">
    <link rel="stylesheet" href="/sass/main.css">
    <link rel="icon" type="image/x-icon" href="/img/logos/favicon.ico">
    <script defer src="/js/bootstrap.bundle.min.js"></script>
    <script src="https://kit.fontawesome.com/81f3202402.js" crossorigin="anonymous"></script>
</head>
<body>
    <%- include('./inc/header.ejs') %>
    <div class="container" style="margin-top: 62px;">
        <div class="row">
            <div class="col-lg-12">
                <%- include('./inc/messages.ejs') %>
            </div>
        </div>
        <div class="row">
            <%- include('./inc/sideBar.ejs') %>
            <div class="col-lg-6">
                <div class="card mt-4 border-1">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-12">
                                 <ul class="nav nav-underline nav-fill" id="myTab" role="tablist">
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link active" id="text-tab" data-bs-toggle="tab" data-bs-target="#text-tab-pane" type="button" role="tab" aria-controls="text-tab-pane" aria-selected="true"><i class="fa-solid fa-pen me-2"></i> Write A Post</button>
                                    </li>
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link" id="media-tab" data-bs-toggle="tab" data-bs-target="#media-tab-pane" type="button" role="tab" aria-controls="media-tab-pane" aria-selected="false"><i class="fa-solid fa-photo-film me-2"></i> Add A Photo/Video</button>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="tab-content" id="myTabContent">
                                    <div class="tab-pane fade show active" id="text-tab-pane" role="tabpanel" aria-labelledby="text-tab" tabindex="0">
                                        <form method="POST" action="/posts/new/<%- logUser.username %>">
                                            <div class="row mt-4 mb-3">
                                                <div class="col">
                                                    <textarea class="form-control" rows="5" cols="0" id="postText" name="postText" placeholder="Write something new..."></textarea>
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <div class="col">
                                                    <button type="submit" class="btn btn-primary btn-lg">Post</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="tab-pane fade" id="media-tab-pane" role="tabpanel" aria-labelledby="media-tab" tabindex="0">
                                        <form method="POST" action="/posts/new/media/<%- logUser.username %>" enctype="multipart/form-data">
                                            <div class="row mt-4 mb-3">
                                                <div class="col">
                                                    <textarea class="form-control" rows="5" cols="0" id="postText" name="postText" placeholder="Write something new..."></textarea>
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <div class="col">
                                                    <label for="nedia" class="form-label">Choose A Photo Or Video</label>
                                                    <input class="form-control form-control-sm" id="media" name="media" type="file">
                                                </div>
                                            </div>
                                            <div class="row mb-3">
                                                <div class="col">
                                                    <button type="submit" class="btn btn-primary btn-lg">Post</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% if(posts.length > 0) { %>
                    <% for(var s = 0; s<posts.length; s++) { %>
                        <div class="card mt-4 border-1">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-lg-2">
                                        <a href="/users/<%- posts[s].author %>">
                                            <% if(posts[s].posts.avatar) { %>
                                                <img src="/uploads/<%- posts[s].author %>/<%- posts[s].posts.avatar %>" alt="<%- posts[s].author %>" width="60" height="60" class="rounded-circle"> 
                                            <% } else { %>
                                                <img src="/img/no_pic.jpg" alt="<%- posts[s].author %>" width="60" height="60" class="rounded-circle"> 
                                            <% } %>
                                        </a>
                                    </div>
                                    <div class="col-lg-10">
                                        <h5 class="card-title"><a href="/users/<%- posts[s].author %>"><%- posts[s].posts.firstname %> <%-posts[s].posts.lastname %></a></h5>
                                        <h6 class="text-light"><small><%= posts[s].post_date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' }) %> %></small></h6>
                                    </div>
                                </div>
                                <div class="row pt-3 pb-3">
                                    <div class="col pt-3">
                                        <p class="text-light" style="font-size: 20px;"><%- posts[s].data %></p>
                                        <% if(posts[s].image) { %>
                                            <a href="/posts/view/<%- posts[s]._id %>">
                                                <img src="/uploads/<%- posts[s].author %>/<%- posts[s].image %>" alt="<%- posts[s].author %>" width="100%" height="600">
                                            </a>
                                        <% } %> 
                                        <% if(posts[s].video) { %>
                                            <video src="/uploads/<%- posts[s].author %>/<%- posts[s].video %>" width="100%" height="600" muted autoplay controls></video>
                                        <% } %>
                                    </div>
                                </div>
                                <div class="row pt-3 pb-3 border-top">
                                    <div class="col">
                                        <% if(posts[s].author == logUser.username) { %>
                                            <form method="POST" action="/posts/delete/<%- posts[s]._id %>">
                                                <button type="submit" class="btn btn-dark"><i class="fa-solid fa-trash me-2"></i> Delete</button>
                                                <a href="/posts/view/<%- posts[s]._id %>" class="btn btn-dark"><i class="fa-solid fa-comments me-2"></i> Comments</a>
                                            </form>
                                        <% } else if(logUser.username == posts[s].likes) { %>
                                            <form method="POST" action="/posts/unlike/<%- posts[s]._id %>">
                                                <button type="submit" class="btn btn-primary"><i class="fa-solid fa-heart me-2"></i> Unlike</button>
                                                <a href="/posts/view/<%- posts[s]._id %>" class="btn btn-dark"><i class="fa-solid fa-comments me-2"></i> Comments</a>
                                            </form>
                                        <% } else { %>
                                            <form method="POST" action="/posts/like/<%- posts[s]._id %>">
                                                <button type="submit" class="btn btn-dark"><i class="fa-regular fa-heart me-2"></i> Like</button>
                                                <a href="/posts/view/<%- posts[s]._id %>" class="btn btn-dark"><i class="fa-solid fa-comments me-2"></i> Comments</a>
                                            </form>
                                        <% } %>
                                        
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% } %>
            </div>
            <div class="col-lg-4">
                <div class="card mt-4">
                    <div class="card-body">
                        <h5 class="card-title">Who To Follow</h5>
                        <hr />
                        <% for(var x = 0; x<sugestions.length; x++) { %>
                            <% if(sugestions[x].username != logUser.following && sugestions[x].username != logUser.username) { %>
                                <div class="row pb-3 border-bottom">
                                    <div class="col-lg-2">
                                        <% if(sugestions[x].avatar) { %>
                                            <a href="/users/<%- sugestions[x].username %>">
                                                <img src="/uploads/<%- sugestions[x].username %>/<%- sugestions[x].avatar %>" alt="<%- sugestions[x].username %>" width="50" height="50" class="rounded-circle">
                                            </a>
                                        <% } else { %>
                                            <a href="/users/<%- sugestions[x].username %>">
                                                <img src="/img/no_pic.jpg" alt="<%- sugestions[x].username %>" width="50" height="50" class="rounded-circle">
                                            </a>
                                        <% } %>
                                    </div>
                                    <div class="col-lg-10">
                                        <h6 class="text-light">
                                            <a href="/users/<%- sugestions[x].username %>" style="text-decoration: none;;"><%- sugestions[x].firstname %> <%- sugestions[x].lastname %></a>
                                        </h6>
                                        <p class="m-0 p-0 text-light">
                                            <% if(sugestions[x].username != logUser.username) { %>
                                                <form method="POST" action="/followers/follow/<%- sugestions[x].username %>">
                                                    <button type="submit" class="nav-link">Follow</button>
                                                </form>
                                            <% } %>
                                        </p>
                                    </div>
                                </div>
                            <% } %>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.min.js" integrity="sha384-G/EV+4j2dNv+tEPo3++6LCgdCROaejBqfUeNjuKAiuXbjrxilcCdDz6ZAVfHWe1Y" crossorigin="anonymous"></script>
</body>
</html>